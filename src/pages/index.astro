---
import WhyReadThisBook from '../components/WhyReadThisBook.astro';
import HeroSection from '../components/HeroSection.astro';
import Layout from '../layouts/Layout.astro';
import Interviews from '../components/Interviews.svelte';
import FreeChapter from '../components/FreeChapter.astro';
import WhatsInside from '../components/WhatsInside.astro';
import Buy from '../components/Buy.astro';
import Footer from '../components/Footer.svelte';
import AudioBook from '../components/AudioBook.astro';
import AboutAuthor from '../components/AboutAuthor.astro';
import {
  showBuyAudiobookSection,
  showDownloadFreeChapterSection,
  showAboutAuthorSection,
} from '../config.json';
---

<Layout title='Book Title'>
  <HeroSection />
  <WhyReadThisBook />
  {showAboutAuthorSection && <AboutAuthor />}
  {showBuyAudiobookSection && <AudioBook />}

  <Interviews />
  {showDownloadFreeChapterSection && <FreeChapter />}

  <WhatsInside />
  <Buy />
  <Footer />
</Layout>
